generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  cpf           String
  endereco      String?
  numero        String?
  bairro        String?
  cidade        String?
  estado        String?
  checkIns      CheckIn[]

  @@map("users")
}

model CheckIn {
  id                 String    @id @default(uuid())
  chamado            String
  created_at         DateTime  @default(now())
  validated_at       DateTime?
  abertura_chamado   DateTime?
  inicio_atendimento DateTime?
  fim_atendimento    DateTime?
  km_inicio          String?
  km_fim             String?
  contrato           String?
  garantia           String?
  tipo               String?
  observacoes        String?
  detalhes           String?
  relatorio_tecnico  String?
  consideracoes      String?
  assinatura         String?
  user               User      @relation(fields: [user_id], references: [id])
  user_id            String
}